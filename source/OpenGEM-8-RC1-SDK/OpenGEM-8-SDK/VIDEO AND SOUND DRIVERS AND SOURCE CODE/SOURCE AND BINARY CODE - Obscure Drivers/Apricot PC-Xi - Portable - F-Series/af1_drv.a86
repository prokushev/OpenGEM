INIT_G:
	push	bp
	push	es
	push	si
	pushf	
	cli
	mov	ax,cs
	mov	usermot+2,ax		;init the user call vectors segs
	mov	userbut+2,ax
	mov	usercur+2,ax
	mov	ax,offset umotvec
	mov	usermot,ax
	mov	ax,offset ubutvec
	mov	userbut,ax
	mov	ax,offset mov_cur
	mov	usercur,ax
	popf
	push	ds
	pop	es
	call	fp_mouse_fixup
	pop	si
	pop	es
	pop	bp
escfn2: 
	cmp	dispmode,1
	jz	escfn2_ok
	ret
escfn2_ok:
	push	bp
	push	es
	push	si
	mov	dispmode,0		; 
	call	vid_detect
	mov	di, offset esc_gfxmode
	call	txt_putstr
	call	update_config
	call	init_pal
	call	init_rowptrs
	call	clearmem
	call	check_mouse
	mov	bx, 32h
	mov	cx, 10h
	mov	dx, 1
	int	0FCh
if mouse
	mov	bl,1
	call	mouse_function		;initialize the mouse
endif
	pop	si
	pop	es
	pop	bp
	ret
;
update_config:
	push	es
	push	ds
	xor	ax, ax
	mov	ds, ax
	mov	bx, BIOS_CONFIG_TBL	;Pointer to Apricot BIOS config table
	les	di, [bx]	;ES:DI->config table
	add	di, 28h
	mov	es:word ptr[di], 20h
	pop	ds
	pop	es
	ret
;
check_mouse:
	push	ds
	xor	ax, ax
	mov	ds, ax
	mov	bx, BIOS_MOUSE_FLAG	
	mov	ax, [bx]
	pop	ds
	test	ax, 1
	jz	check_mouse1
	inc	bx
check_mouse1:
	mov	mouseflag, bl
	ret
;
; Set up the roller-RAM.
;
init_rowptrs:
	mov	ax, 1E0h
	mov	es, ax
	mov	di, 0
	mov	cx, 200
	mov	ax, 200h
	shl	ax, 1
	shl	ax, 1
	shl	ax, 1
	shl	ax, 1
	shr	ax, 1
	cld
init_rowptr1:
	stosw
	add	ax, 50h
	loop	init_rowptr1
	ret
;
init_pal:
	mov	si, offset palette_1
	push	ds
	xor	ax, ax
	mov	ds, ax
	mov	bx, BIOS_CONFIG_TBL
	les	bx, [bx]
	add	bx, 23h		;Colour / mono flag?
	mov	al, es:[bx]
	test	al, 0FFh
	jz	init_pal_1
	mov	si, offset palette_2
init_pal_1:
	pop	ds
	push	cs
	pop	es
	mov	di, offset palette
	mov	cx, 104
	cld
	rep	movsw
	mov	si, offset palette
	mov	bx, 0FFh
	call	write_lut	
	ret
;
calc_lutreg:
	mov	dx, ax
	mov	al, ah	
	test	al, 2
	jz	calc_lutreg_1
	or	ah, 8
	jmps	calc_lutreg_2
;
calc_lutreg_1:
	and	ah, 0F7h
calc_lutreg_2:
	test	al, 8
	jz	calc_lutreg_3
	or	ah, 2
	jmps	calc_lutreg_4
;
calc_lutreg_3:
	and	ah, 0FDh
calc_lutreg_4:
	not	ah
	and	ah, 0Fh
	mov	al, dl
	ret
;
write_lut:
	or	bx, bx
	jnz	write_lut1
	push	es
	call	calc_lutreg
	mov	bx, 0E000h
	mov	es, bx
	shl	al, 1
	shl	al, 1
	mov	dl, ah
	xor	ah, ah
	mov	si, ax
	add	si, offset sp_col
	mov	cx, 4	;Load a single palette register, 4 times
	xor	bx, bx	;(because this is a 4-colour mode)
write_lut0:
	lodsb
	mov	bl, al
	mov	es:[bx], dl
	loop	write_lut0
	pop	es
	ret
;
write_lut1:
	mov	di, offset sp_col
	mov	cx, 4
	mov	ah, 0
write_lut2:
	mov	al, cs:[si]
	inc	si
	xor	bx, bx
	xchg	ah, al
	push	ax
	push	si
	push	cx
	call	write_lut
	pop	cx
	pop	si
	pop	ax
	xchg	ah, al
	inc	ah
	loop	write_lut2
	ret
;

